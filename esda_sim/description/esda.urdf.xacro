<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">
    <!-- IMPORTS -->
    <xacro:include filename="inertial_macros.xacro"/>
    
    <!-- RANDOM COLOURS FOR DEBUG PURPOSES -->
    <material name="white">
        <color rgba="1 1 1 0.3"/>
    </material>
    
    <material name="light_grey">
        <color rgba="0.9 0.9 0.9 0.4"/>
    </material>
    
    <material name="black">
        <color rgba="0.2 0.2 0.2 0.4"/>
    </material>
    
    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>
    
    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>
   
    <!-- ROOT LINK 
         the datum point/point of reference and point that
         everything ultimately connects to
    -->
    <link name="base_link"></link>
    
    <!-- BODY LINKS 
         these define the body of the ESDA which is simplified
         as a series of boxes
    -->
    <!-- DRIVE BOX LINK -->
    <link name="drive_box">
        <visual>
            <geometry>
                <box size="0.505 0.57 0.275" />
            </geometry>
            <material name="white"/>
        </visual>
        
        <collision>
            <geometry>
                <box size="0.505 0.57 0.275" />
            </geometry>
            <material name="white"/>
        </collision>   
        
        <xacro:inertial_box mass="5" x="0.505" y="0.57" z="0.275">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>
    
    <joint name="drive_box_joint" type="fixed">
        <parent link="base_link"/>
        <child link="drive_box"/>
        <origin xyz="-0.2525 0 0"/>
    </joint>
    
    <!-- MIDDLE BOX LINK -->
    <link name="middle_box">
        <visual>
            <geometry>
                <box size="0.81 0.57 0.275" />
            </geometry>
            <material name="light_grey"/>
        </visual>
        
        <collision>
            <geometry>
                <box size="0.81 0.57 0.275" />
            </geometry>
            <material name="light_grey"/>
        </collision>
        
        <xacro:inertial_box mass="5" x="0.81" y="0.57" z="0.275">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>
    
    <joint name="middle_box_joint" type="fixed">
        <parent link="base_link"/>
        <child link="middle_box"/>
        <origin xyz="0.405 0 0"/>
    </joint>
    
    <!-- STEERING BOX LINK -->
    <link name="steering_box">
        <visual>
            <geometry>
                <box size="0.505 0.57 0.275" />
            </geometry>
            <material name="white"/>
        </visual>
        
        <collision>
            <geometry>
                <box size="0.505 0.57 0.275" />
            </geometry>
            <material name="white"/>
        </collision>       
        
        <xacro:inertial_box mass="5" x="0.505" y="0.57" z="0.275">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box> 
    </link>
    
    <joint name="steering_box_joint" type="fixed">
        <parent link="base_link"/>
        <child link="steering_box"/>
        <origin xyz="1.0625 0 0"/>
    </joint>
    
    <!-- WHEEL LINKS
         these define the 4 wheels and their attachment to 
         the vehicle. Note due to complexity of CAD, wheels are
         parallel and upright as they don't need accurate modelling
    -->
    <!-- LEFT DRIVE WHEEL -->
    <link name="left_drive_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1325" length="0.07"/>
            </geometry>
            <material name="black"/>
        </visual>
        
        <collision>
            <geometry>
                <cylinder radius="0.1325" length="0.07"/>
            </geometry>
            <material name="black"/>
        </collision>
        
        <xacro:inertial_cylinder mass="1" length="0.07" radius="0.1325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    
    <joint name="left_drive_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_drive_wheel"/>
        <origin xyz="-0.315 -0.479 -0.139" rpy="${pi/2} 0 0 "/>
        <axis xyz="0 0 1"/>
    </joint>
    
    <!-- RIGHT DRIVE WHEEL -->    
    <link name="right_drive_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1325" length="0.07"/>
            </geometry>
            <material name="black"/>
        </visual>
        
        <collision>
            <geometry>
                <cylinder radius="0.1325" length="0.07"/>
            </geometry>
            <material name="black"/>
        </collision>
        
        <xacro:inertial_cylinder mass="1" length="0.07" radius="0.1325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    
    <joint name="right_drive_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_drive_wheel"/>
        <origin xyz="-0.315 0.479 -0.139" rpy="-${pi/2} 0 0 "/>
        <axis xyz="0 0 -1"/>
    </joint>
 
    
   <!-- LEFT STEERING WHEEL -->
    <link name="left_steering_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1325" length="0.07"/>
            </geometry>
            <material name="light_grey"/>
        </visual>
        
        <collision>
            <geometry>
                <cylinder radius="0.1325" length="0.07"/>
            </geometry>
            <material name="light_grey"/>
        </collision>
        
        <xacro:inertial_box mass="5" x="0.505" y="0.57" z="0.275">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box> 
    </link>
    
    <joint name="left_steering_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_steering_wheel"/>
        <origin xyz="1.149 -0.51 -0.139" rpy="${pi/2} 0 0 "/>
        <axis xyz="0 0 1"/>
    </joint>
    
    <!-- RIGHT STEERING WHEEL -->    
    <link name="right_steering_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1325" length="0.07"/>
            </geometry>
            <material name="light_grey"/>
        </visual>
        
        <collision>
            <geometry>
                <cylinder radius="0.1325" length="0.07"/>
            </geometry>
            <material name="light_grey"/>
        </collision>
        
        <xacro:inertial_box mass="5" x="0.505" y="0.57" z="0.275">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box> 
    </link>
    
    <joint name="right_steering_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_steering_wheel"/>
        <origin xyz="1.149 0.51 -0.139" rpy="-${pi/2} 0 0 "/>
        <axis xyz="0 0 -1"/>
    </joint>

</robot>
